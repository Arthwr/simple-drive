{
  "name": "simple-drive",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:tailwind\"",
    "dev:server": "NODE_ENV=development npx nodemon --ext ts --exec ts-node --files src/server.ts",
    "dev:tailwind": "postcss src/public/css/tailwind.css -o src/public/css/styles.css --watch",
    "build": "npx tsc && npm run copy-files",
    "copy-files": "cp -r src/views dist/views && cp -r src/public dist/public",
    "start": "npm run build && NODE_ENV=production node dist/server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "arthwr",
  "license": "ISC",
  "description": "Simple web uploader at home",
  "dependencies": {
    "@prisma/client": "^6.4.1",
    "@quixo3/prisma-session-store": "^3.1.13",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.0",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.0.0",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.9",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.1",
    "@types/express-validator": "^2.20.33",
    "@types/helmet": "^0.0.48",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.9",
    "@types/passport": "^1.0.17",
    "@types/passport-local": "^1.0.38",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.0",
    "prisma": "^6.4.1",
    "tailwindcss": "^4.0.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
