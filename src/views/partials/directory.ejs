<%# check if directory is empty %>
    <% const isEmpty=(!folderContent.folders || folderContent.folders.length===0) && (!folderContent.files ||
        folderContent.files.length===0); %>

        <div id="directory">
            <div class="bg-white rounded-lg shadow text-sm text-gray-500">
                <% if (!isEmpty) { %>
                    <%# Header row %>
                        <div class="border-gray-200 border-b">
                            <div
                                class="grid grid-cols-[minmax(125px,3fr)_minmax(100px,2fr)_minmax(150px,3fr)_minmax(80px,1fr)] *:p-2">
                                <div class="justify-self-start ml-2">Name</div>
                                <div>Size</div>
                                <div>Modified</div>
                                <div class="justify-self-end mr-4">Actions</div>
                            </div>
                        </div>

                        <%# Display folders %>
                            <% if (folderContent.folders && folderContent.folders.length> 0) { %>
                                <% folderContent.folders.forEach(folder=> { %>
                                    <div
                                        class="grid grid-cols-[minmax(125px,3fr)_minmax(100px,2fr)_minmax(150px,3fr)_minmax(80px,1fr)] *:p-2 *:content-center hover:bg-gray-100">
                                        <a href="/dashboard/<%= folder.publicId %>"
                                            class="cursor-pointer justify-self-start ml-2 flex items-center gap-3">
                                            <img src="/assets/img/folder-dir-icon.svg" width="18" height="auto" alt="">
                                            <span class="truncate" title="<%= folder.name %>">
                                                <%= folder.name %>
                                            </span>
                                        </a>
                                        <div class="text-gray-500">--</div>
                                        <div class="text-gray-500">
                                            <%= utils.formatDate(folder.updatedAt) %>
                                        </div>
                                        <div class="flex gap-2 justify-self-end mr-2">
                                            <button class="p-1 hover:bg-accent cursor-pointer rounded-full">
                                                <img src="/assets/img/share-dir-icon.svg" width="18" height="auto"
                                                    alt="">
                                            </button>
                                            <button class="p-1 hover:bg-accent cursor-pointer rounded-full">
                                                <img src="/assets/img/actions-dir-icon.svg" width="18" height="auto"
                                                    alt="">
                                            </button>
                                        </div>
                                    </div>
                                    <% }) %>
                                        <% } %>

                                            <%# Display files %>
                                                <% if (folderContent.files && folderContent.files.length> 0) { %>
                                                    <% folderContent.files.forEach(file=> { %>
                                                        <div
                                                            class="grid grid-cols-[minmax(125px,3fr)_minmax(100px,2fr)_minmax(150px,3fr)_minmax(80px,1fr)] *:p-2 *:content-center hover:bg-gray-100">
                                                            <div
                                                                class="justify-self-start ml-2 flex items-center gap-3">
                                                                <img src="/assets/img/file-dir-icon.svg" width="18"
                                                                    height="auto" alt="">
                                                                <span>
                                                                    <%= file.name %>
                                                                </span>
                                                            </div>
                                                            <div class="text-gray-500">
                                                                <%= utils.formatFileSize(Number(file.size)) %>
                                                            </div>
                                                            <div class="text-gray-500">
                                                                <%= utils.formatDate(file.updatedAt) %>
                                                            </div>
                                                            <div class="flex gap-2 justify-self-end mr-2">
                                                                <button
                                                                    class="p-1 hover:bg-accent cursor-pointer rounded-full">
                                                                    <img src="/assets/img/share-dir-icon.svg" width="18"
                                                                        height="auto" alt="">
                                                                </button>
                                                                <button
                                                                    class="p-1 hover:bg-accent cursor-pointer rounded-full">
                                                                    <img src="/assets/img/actions-dir-icon.svg"
                                                                        width="18" height="auto" alt="">
                                                                </button>
                                                            </div>
                                                        </div>
                                                        <% })} %>
                                                            <% } else { %>

                                                                <%# Directory is empty %>
                                                                    <div
                                                                        class="mt-3 py-8 flex flex-col justify-start items-center gap-2 h-screen">
                                                                        <span class="text-xl text-blue-400">Looks
                                                                            like
                                                                            this folder is on a strict diet â€”
                                                                            nothing in
                                                                            here yet!</span>
                                                                        <img class="opacity-80"
                                                                            src="/assets/img/empty-state-cat.webp"
                                                                            width="400" height="auto" alt="">
                                                                        <span class="text-sm text-gray-500">only this
                                                                            cat</span>
                                                                    </div>
                                                                    <% } %>
            </div>
        </div>
        </div>