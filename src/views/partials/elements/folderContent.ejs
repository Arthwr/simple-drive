<!-- Render folders first -->
<% if (folderContent) { %>
    <% folderContent.folders.forEach(folder=> { %>
        <div
            class="grid grid-cols-[minmax(200px,3fr)_minmax(100px,2fr)_minmax(150px,3fr)_minmax(80px,1fr)] *:p-2 *:content-center hover:bg-gray-100">
            <div class="justify-self-start ml-2 flex items-center gap-3">
                <img src="/assets/img/folder-dir-icon.svg" width="18" height="auto" alt="">
                <span>
                    <%= folder.name %>
                </span>
            </div>
            <div class="text-gray-500">--</div>
            <div class="text-gray-500">
                <%= utils.formatDate(folder.updatedAt) %>
            </div>
            <div class="flex gap-2 justify-self-center">
                <button class="p-1 hover:bg-accent cursor-pointer rounded-full">
                    <img src="/assets/img/share-dir-icon.svg" width="18" height="auto" alt="">
                </button>
                <button class="p-1 hover:bg-accent cursor-pointer rounded-full">
                    <img src="/assets/img/actions-dir-icon.svg" width="18" height="auto" alt="">
                </button>
            </div>
        </div>
        <% }) %>
            <% folderContent.files.forEach(file=> { %>
                <div
                    class="grid grid-cols-[minmax(200px,3fr)_minmax(100px,2fr)_minmax(150px,3fr)_minmax(80px,1fr)] *:p-2 *:content-center hover:bg-gray-100">
                    <div class="justify-self-start ml-2 flex items-center gap-3">
                        <img src="/assets/img/file-dir-icon.svg" width="18" height="auto" alt="">
                        <span>
                            <%= file.name %>
                        </span>
                    </div>
                    <div class="text-gray-500">
                        <%= file.size %>
                    </div>
                    <div class="text-gray-500">
                        <%= utils.formatDate(file.updatedAt) %>
                    </div>
                    <div class="flex gap-2 justify-self-center">
                        <button class="p-1 hover:bg-accent cursor-pointer rounded-full">
                            <img src="/assets/img/share-dir-icon.svg" width="18" height="auto" alt="">
                        </button>
                        <button class="p-1 hover:bg-accent cursor-pointer rounded-full">
                            <img src="/assets/img/actions-dir-icon.svg" width="18" height="auto" alt="">
                        </button>
                    </div>
                </div>
                <% }) %>
                    <% } %>